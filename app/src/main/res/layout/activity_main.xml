<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.sdsmdg.harjot.crollerTest.MainActivity">

    <com.sdsmdg.harjot.crollerTest.Croller
        android:id="@+id/croller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:back_circle_color="#EDEDED"
        app:indicator_color="#EDEDED"
        app:indicator_width="15"
        app:is_continuous="false"
        app:label=" "
        app:label_color="#000000"
        app:main_circle_color="#FFFFFF"
        app:max="48"
        app:progress_primary_color="#80ffffff"
        app:progress_secondary_color="#3baf39"
        app:start_offset="45"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@+id/rg_mode"
        android:inputType="time"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:text=""/>

    <RadioGroup
        android:id="@+id/rg_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch1"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <RadioButton
            android:id="@+id/economy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:button="@null"
            android:layout_margin="10dp"
            android:background="@drawable/economy_selector"/>


        <RadioButton
            android:id="@+id/rg_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:button="@null"
            android:layout_margin="10dp"
            android:background="@drawable/switch_selector"/>

        <RadioButton
            android:id="@+id/comfort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:button="@null"
            android:layout_margin="10dp"
            android:background="@drawable/comfor_selector"/>

    </RadioGroup>


</RelativeLayout>
